{% if record.updatedDate | isInLast(5, 'minutes') %}
  {% set justNowClass = "app-just-now" %}
{% endif %}

<div class="app-application-card {{justNowClass}}">

  <div class="app-application-card_col">
    <h3 class="govuk-heading-m govuk-!-margin-bottom-3">
      <a href="/record/{{ record.id }}" class="govuk-link govuk-link--no-visited-state">
        {{ record.personalDetails | getShortName or "Draft record" }}
      </a>
    </h3>
    {% if record.traineeId %}
      <p class="govuk-caption-m govuk-!-font-size-16 app-application-card__id govuk-!-margin-bottom-0">Trainee ID: {{record.traineeId}}</p>
    {% endif %}
    {% if record.trn %}
      <p class="govuk-caption-m govuk-!-font-size-16 app-application-card__id govuk-!-margin-bottom-0">TRN: {{record.trn}}</p>
    {% endif %}
  </div>
  <div class="app-application-card_col">
    <p class="govuk-body govuk-!-margin-bottom-0">{{record.assessmentDetails.subject}}</p>
    <p class="govuk-body govuk-hint govuk-!-margin-bottom-0">{{record.route}}</p>
  </div>
  <div class="app-application-card_col">
    {{govukTag({
      text: record.status,
      classes: record.status | getStatusClass
    })}}
    <p class="govuk-caption-m govuk-!-font-size-16 govuk-!-margin-top-2 govuk-!-margin-bottom-0 app-application-card__submitted">Updated: <span>{{record.updatedDate | govukDate}}</span></p>
  </div>
</div>
